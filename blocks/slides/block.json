{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "ptws/slides",
	"version": "0.3.6",
	"title": "PTWS: Slides",
	"allowedBlocks": ["ptws/slides-flickr"],
	"category": "text",
	"example": {
		"attributes": {
			"initial_ids": "",
			"layout": "fixed",
			"image_count": "1"
		},
		"innerBlocks": [
			{	"name": "ptws/slides-flickr",
				"attributes": {
					"flickr_id": "",
					"flickr_id_is_valid": false,
					"flex_ratio": "1",
					"large_thumbnail_height": "0",
					"large_thumbnail_width": "0"
				}
			}
		]
	},
	"icon": "index-card",
	"textdomain": "ptws",
	"description": "Shows a sequence of one or more images (slides), in a variety of layouts.",
	"attributes": {
		"initial_ids": {
			"type": "string",
			"default": "",
			"source": "attribute",
			"selector": "div.wp-block-ptws-slides",
			"attribute": "data-ptws-initial-ids"
		},
		"layout": {
			"type": "string",
			"default": "fixed",
			"source": "attribute",
			"selector": "div.wp-block-ptws-slides",
			"attribute": "data-ptws-layout"
		},
		"image_count": {
			"type": "string",
			"default": "0",
			"source": "attribute",
			"selector": "div.wp-block-ptws-slides",
			"attribute": "data-ptws-initial-image-count"
		}
	},
	"providesContext": {
        "ptws/slides-context-layout": "layout"
    },
	"editorScript": "file:./block.js",
	"style": "file:./style.css"
}